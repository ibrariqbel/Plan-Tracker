@model PlanTracker.Models.DomainModels.Goal

@{
    ViewData["Title"] = "Goal Details";
}

<!-- Background Wrapper -->
<div class="container-fluid bg-neumorphism p-4">
    <div class="neumorphic-card p-4 text-center">
        <h1>Goal Details</h1>
        <p class="text-muted">Here is the information for your selected goal.</p>

        <div class="neumorphic-card p-3 mt-3">
            <dl class="row">
                <dt class="col-sm-4">Goal ID:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Id)</dd>

                <dt class="col-sm-4">Title:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Title)</dd>

                <dt class="col-sm-4">Description:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Description)</dd>

                <dt class="col-sm-4">Start Date:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.StartDate)</dd>

                <dt class="col-sm-4">End Date:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.EndDate)</dd>
            </dl>
        </div>

        <div class="text-center mt-4">
            <a class="btn-neumorphic-small" asp-action="Edit" asp-route-id="@Model.Id">Edit Goal</a>
            <a class="btn-neumorphic-small" asp-action="Index">Back to List</a>
        </div>
    </div>
</div>

<!-- Neumorphism CSS -->
<style>
    .bg-neumorphism {
        background: #e0e0e0;
        min-height: 100vh;
        padding: 20px;
    }

    .neumorphic-card {
        background: #e0e0e0;
        border-radius: 15px;
        padding: 20px;
        box-shadow: 8px 8px 15px #c8c8c8, -8px -8px 15px #ffffff;
    }

    .btn-neumorphic-small {
        background: #e0e0e0;
        padding: 8px 12px;
        border-radius: 8px;
        box-shadow: 3px 3px 8px #c8c8c8, -3px -3px 8px #ffffff;
        font-size: 14px;
    }

    .btn-neumorphic-small:hover {
        box-shadow: inset 3px 3px 8px #c8c8c8, inset -3px -3px 8px #ffffff;
    }
</style>
